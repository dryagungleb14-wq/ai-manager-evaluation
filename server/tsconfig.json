{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/*"]
    },
    "types": ["node"],
    "sourceMap": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "../shared/**/*.ts"]
}
